<p id="notice"><%= notice %></p>

<h1>Pending Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Tags</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content.truncate(50, separator: ' ').html_safe%></td>
        <td><%= post.get_tag_list %></td>
        <td><%= post.status %></td>
        <td><%= post.user.username %></td>
        <% if can? :read, Post %>
          <td><%= link_to 'Show', post %></td>
        <% end %>
        <% if can? :update, Post %>
          <td><%= link_to 'Approve', post_path(post, :post => {:status => 'Done'}), :method => :patch, :confirm => 'Are you sure?' %></td>
        <% end %>
        <% if can? :update, Post %>
          <td><%= link_to 'Reject', post_path(post, :post => {:status => 'Rejected'}), :method => :patch, :confirm => 'Are you sure?' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', posts_path %>
