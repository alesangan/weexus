<p id="notice"><%= notice %></p>

<h1>Exclusions</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Weighting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exclusions.each do |exclusion| %>
      <tr>
        <td><%= exclusion.word %></td>
        <td><%= exclusion.weighting %></td>
        <td><%= link_to 'Show', exclusion %></td>
        <td><%= link_to 'Edit', edit_exclusion_path(exclusion) %></td>
        <td><%= link_to 'Destroy', exclusion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exclusion', new_exclusion_path %>
