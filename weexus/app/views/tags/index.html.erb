<p id="notice"><%= notice %></p>

<h1>Tags</h1></br>

<br />
  <div id="tag_cloud"><span class='shadow'></span>
      <% tag_cloud Post.tag_counts, %w[a b c d e f] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag), class: css_class %>
      <% end %>
</div>
  <br />


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
<!--AH TYPE NOT USEFUL 21.05.17
      <th>Type</th>
-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.status %></td>

<!--AH TYPE NOT USEFUL 21.05.17
        <td><%= tag.type %></td>
-->
        <td><%= link_to 'Show all Tagged Posts', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>

<!--ALEXH CHANGE STATUS IN EDIT RATHER THAN DESTROY TAGS
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

